{
  "include": [
    "./loom.bundle.ts"
  ],
  "exclude": [
    "./dist",
    "./node_modules"
  ],
  "compilerOptions": {
    "lib": [
      "es2023"
    ],
    "baseUrl": ".",
    "outDir": "./dist",
    "module": "Node16",
    "strict": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "Node16",
    "target": "es2022"
  }
}
