{
  "include": [
    "./builder/**/*.ts",
    "./partials/**/*.ts",
  ],
  "compilerOptions": {
    "paths": {
      "@builder/*": ["./builder/*"]
    },
    "moduleDetection": "force",
    "module": "Preserve",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "target": "ESNext"
  }
}
